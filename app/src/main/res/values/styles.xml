<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!--选择性别动画start-->
    <style name="sex_dialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- 设置对话框的透明 和点击外面无效果start -->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--主界面底部的ImageView属性start-->
    <style name="main_image">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--主界面底部的ImageView属性end-->

    <!--漫画主界面TextView属性start-->
    <style name="cartoon_main_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--漫画主界面TextView属性end-->

    <!--评分条五星自定义样式start-->
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <!--指向star_rating_bar_full.xml文件 -->
        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <!-- 是否不支持用户交互，只应作为指标。 -->
        <item name="android:isIndicator">true</item>
    </style>
    <!--评分条五星自定义样式end-->

    <!--通用标题RelativeLayout start-->
    <style name="title_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--通用标题RelativeLayout start-->

    <!--通用标题 左边返回按钮ImageView start-->
    <style name="title_img_back">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@mipmap/arrow_left</item>
    </style>
    <!--通用标题 左边返回按钮ImageView end-->

    <!--通用标题栏TextView start-->
    <style name="title_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--通用标题栏TextView end-->

    <!--更多RelativeLayout start-->
    <style name="more_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/more_rl_background</item>
    </style>
    <!--更多RelativeLayout end-->

    <!-- 更多-ImageView start-->
    <style name="more_img">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <!-- 更多-ImageView end-->

    <!-- 更多-TextView start-->
    <style name="more_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 更多-TextView end-->

    <!-- 更多-箭头Image start-->
    <style name="more_img_arrow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@mipmap/arrow</item>
    </style>
    <!-- 更多-箭头Image end-->

    <!--编辑个人资料TextView start-->
    <style name="edit_textview">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/colorB4B4B4</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--编辑个人资料TextView end-->

    <!-- 编辑个人资料-Checkbox start-->
    <style name="edit_checkbox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>
    <!-- 更多-箭头Image end-->

    <!--充值 LinearLayout start-->
    <style name="recharge_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!--充值 LinearLayout end-->
    <!--充值 ImageView start-->
    <style name="recharge_iv">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--充值 ImageView end-->

    <!--充值 TextView start-->
    <style name="recharge_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <!--充值 TextView end-->
</resources>
