<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_edit_shape"
    >
<!--编辑个人资料-性别-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorFFA200">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择性别"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/dialog_close"
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/dialog_close"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_edit_man"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_edit_man"
            style="@style/more_tv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="男" />

        <CheckBox
            android:checked="true"
            android:id="@+id/checkbox_man"
            android:clickable="false"
            style="@style/edit_checkbox" />
    </RelativeLayout>
    <View
        android:id="@+id/view_collection"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_edit_man"
        android:background="@color/gray" />
    <RelativeLayout
        android:id="@+id/rl_edit_woman"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_edit_woman"
            style="@style/more_tv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="女" />

        <CheckBox
            android:id="@+id/checkbox_woman"
            android:clickable="false"
            style="@style/edit_checkbox" />
    </RelativeLayout>
</LinearLayout>