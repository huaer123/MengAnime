<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <!--个人中心界面-->
    <include
        android:id="@id/rl_title"
        layout="@layout/title" />

    <LinearLayout
        style="@style/more_relativelayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <!--最近更新Item-->
            <ImageView
                android:id="@+id/iv_personal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/more_rl_background"
                android:scaleType="fitXY"
                android:src="@mipmap/line_bottom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_launcher"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_personal_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="酷哥"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_personal_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="已收藏0本漫画"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_recovery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="恢复"
                        android:textColor="@color/colorFBB989" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_3" />

        <!--最后同步-->
        <RelativeLayout
            android:id="@+id/rl_feed_back"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_personal_sync"
                style="@style/more_tv"
                android:layout_marginLeft="0dp"
                android:text="@string/personal_sync" />

            <ImageButton style="@style/more_img_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_3" />

        <!--我的评论-->
        <RelativeLayout
            android:id="@+id/rl_personal_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_personal_comment"
                style="@style/more_tv"
                android:layout_marginLeft="0dp"
                android:text="@string/personal_comment" />

            <ImageButton style="@style/more_img_arrow" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_edit"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:textColor="@color/color7D3138"
        android:background="@drawable/personal_button"/>
    <Button
        android:id="@+id/bt_recharge"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_recharge"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:textColor="@color/color7D3138"
        android:background="@drawable/personal_button"/>
</LinearLayout>