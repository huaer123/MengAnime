<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.menganime.activity.MainActivity"
    android:orientation="vertical">

    <com.menganime.weight.MyViewPager
        android:id="@+id/activity_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/bottom_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_layout_collectionhistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_collectionhistory_task"
                style="@style/main_image"
                android:src="@mipmap/main_collectionhistory" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_layout_cartoonmain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_cartoonmain"
                style="@style/main_image"
                android:src="@mipmap/main_cartoonmain" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout_cartoonclassify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_cartoonclassify"
                style="@style/main_image"
                android:src="@mipmap/main_cartoonclassify" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image_more"
                style="@style/main_image"
                android:src="@mipmap/main_more" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
