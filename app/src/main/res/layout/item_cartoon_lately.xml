<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">
    <!--最近更新Item-->
    <ImageView
        android:id="@+id/iv_cartoon_picture"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cartoon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="镖人"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_cartoon_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="新漫画"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cartoon_Describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="1dp"
            android:lines="1"
            android:text="悠悠神代事,黯黯不曾闻!!!!!!"
            android:textColor="@color/gray_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingbar_id"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                android:numStars="5"
                android:stepSize="1.0"></RatingBar>
            <TextView
                android:id="@+id/tv_cartoon_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:layout_marginLeft="5dp"
                android:text="更新到56话"
                android:textColor="@color/gray_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>